    <script type="text/javascript">
        $(document).ready(() => {


            var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7006/SignalRHub").build();
            //$("#connstatus").text(connection.state);

            connection.start().then(() => {



                setInterval(() => {

                    connection.invoke("SendStatistics");


                }, 1000);

            }).catch((err) => { console.log(err) });

            connection.on("ReceiveCategoryCount", (value) => {

                $("#categorycount").text(value);
            })

            connection.on("ReceiveProductCount", (value2) => {

                $("#productcount").text(value2);
            })

            connection.on("ReceiveActiveCategoryCount", (value3) => {

                $("#activecategorycount").text(value3);
            })


            connection.on("ReceivePassiveCategoryCount", (value4) => {

                $("#passivecategorycount").text(value4);
            })

            connection.on("ReceiveHamburgerCount", (value5) => {

                $("#hamburgercount").text(value5);
            })

            connection.on("ReceiveDrinkCount", (value6) => {

                $("#drinkcount").text(value6);
            })

            connection.on("ReceivePriceAvg", (value7) => {
                $("#priceavg").text(value7);
           
            })

            connection.on("ReceiveMaxPrice", (value8) => {
                $("#maxprice").text(value8);

            })

            connection.on("ReceiveMinPrice", (value9) => {
                $("#minprice").text(value9);

            })

            connection.on("ReceiveAvgHamburger", (value10) => {
                $("#avghamburger").text(value10);

            })

            connection.on("ReceiveTotalOrder", (value11) => {
                $("#totalordercount").text(value11);

            })
            connection.on("ReceiveActiveOrder", (value12) => {
                $("#activeordercount").text(value12);

            })

            connection.on("ReceiveLastOrder", (value13) => {
                $("#lastorderprice").text(value13);

            })

            connection.on("ReceiveTotalAmount", (value14) => {
                $("#totalamount").text(value14);

            })


            connection.on("ReceiveTableCount", (value16) => {
                $("#tablecount").text(value16);

            })

        });


    </script>
